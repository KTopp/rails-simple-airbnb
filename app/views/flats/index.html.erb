<body>
    <div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Flats</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
        <p>All <%= @flats.count %> flats.</p>
    </div>
  </div>

  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4 mb-5">
        <div class="flat-card">
          <div class="flat-card-image rounded mb-2" style="background-image: url('https://images.unsplash.com/photo-1494526585095-c41746248156?w=1200');"></div>
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><%= flat.name %></h4>
            </div>
            <p><%= flat.address %></p>
            <div class="d-flex">
              <div class="d-flex align-items-center">
                <i class="fa-solid fa-people-line"></i>
                <span><%= flat.number_of_guests %></span>
              </div>
              <div class="d-flex align-items-center ms-3">
                <i class="fa-solid fa-euro-sign"></i>
                <span><%= flat.price_per_night %></span>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <a href=<%= flat_path(flat) %>>More info</a>
            <a class="ms-3 text-warning" href=<%= edit_flat_path(flat) %>>Edit</a>
            <a data-turbo-method="delete" data-turbo-confirm="Are you sure?" class="ms-3 text-danger" href=<%= flat_path(flat) %>>Remove</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
</body>